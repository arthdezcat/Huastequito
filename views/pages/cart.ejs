            </div>
            
            <div class="cart-item-price">
              $<%= (item.price * item.cantidad).toFixed(2) %>
            </div>
            
            <button class="cart-item-remove" onclick="removeItem('<%= item._id %>')" title="Eliminar del carrito">
              <i class="fas fa-trash"></i>
            </button>
